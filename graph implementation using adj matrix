#include<iostream>
#include<map>
#include<vector>
#include<list>
using namespace std;

class Graph {
public:
    int size;
    int **arr;

    Graph(int size)
    {
        this->size = size;
        arr = new int*[size];
        for(int i = 0; i < size; i++)
        {
            arr[i] = new int[size];
        }

        for(int i = 0; i < size ; i++)
        {
            for(int j = 0 ; j < size ; j++)
            {
                arr[i][j] = 0;
            }
        }
    }

    void insert(int src , int dest , int dire)
    {
        if(dire == 1)
        {
            arr[src][dest] = 1;
        }
        else{
            arr[src][dest] = 1;
            arr[dest][src] = 1;
        }
    }

    void print()
    {
        cout<<"adjacency matrix ::"<<endl;
        for(int i = 0 ; i < size ; i++)
        {
            for(int j = 0 ; j < size ; j++)
            {
                cout<<arr[i][j] <<" ";
            }
            cout<<endl;
        }
    }
};

int main()
{
    int nodes;
    cout<<"enter the number of node";
    cin>>nodes;

    // 1 -> directed ; 0 ->undirected graph;
    // 0 based node
    Graph gp(nodes);
    gp.insert(1,3,1);
    gp.insert(0,2,0);
    gp.print();
    return 0;
}
